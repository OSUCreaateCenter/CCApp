<%= render "/header" %>
<h2>カテゴリー名編集</h2>
<%= form_with model: @category do |f| %>
    <p class="label">カテゴリ名</p>
    <%= f.text_field :name,class:"form" %><br>
    <div class="actions">
      <%= f.submit "確定" %>
    </div>
     <%= link_to "戻る",categories_path,class:"back-button" %>
     <%= link_to 'カテゴリーの削除', category_path(@category), method: :delete, data: {confirm: "カテゴリー内にある全てのコンテンツが消えてしまいますが、よろしいですか？"},class:"delete-button" %>
<% end %>

<style>
h2{
  text-align:center;
  margin-top:100px;
  margin-bottom:100px;
  font-size:40px;
}
.label{
  font-size:25px;
  text-align:center;
}
.form{
  display:block;
  margin:0 auto;
  text-align:center;
  width:500px;
  height:40px;
  font-size:25px;
}
.memory{
  font-size:20px;
  text-align:center;
  display:inline-block;
}
.box{
  display:inline-block;
  font-size:50px;
  margin-left:45%;
}
.actions>input{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:skyblue;
  border:none;
  display:block;
  margin:0 auto;
  border-radius:10px;
}
.actions>input:hover{
    cursor: pointer;
    cursor: hand;
    background:rgb(100,149,237);
}
.back-button{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:rgb(152,251,152);
  border:none;
  display:block;
  margin:10px auto 20px;
  border-radius:10px;
  text-decoration:none;
  text-align:center;
}
.back-button:hover{
   background:rgb(60,179,113);
}
.delete-button{
  width:300px;
  height:50px;
  font-size:30px;
  color:white;
  background:rgba(255,51,0,0.9);
  border:none;
  display:block;
  margin:10px auto 80px;
  border-radius:10px;
  text-decoration:none;
  text-align:center;
}
</style>