<%= render "/header" %>
<h2>新規カテゴリー作成</h2>
<%= form_with model: @category do |f| %>
    <p class="label">カテゴリ名</p>
    <%= f.text_field :name,class:"form" %><br>
    <div class="actions">
      <%= f.submit "作成" %>
    </div>
     <%= link_to "戻る",categories_path,class:"back-button" %>
<% end %>

<style>
h2{
  text-align:center;
  margin-top:100px;
  margin-bottom:100px;
  font-size:40px;
}
.label{
  font-size:25px;
  text-align:center;
}
.form{
  display:block;
  margin:0 auto;
  text-align:center;
  width:500px;
  height:40px;
  font-size:25px;
}
.memory{
  font-size:20px;
  text-align:center;
  display:inline-block;
}
.box{
  display:inline-block;
  font-size:50px;
  margin-left:45%;
}
.actions>input{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:skyblue;
  border:none;
  display:block;
  margin:0 auto;
  border-radius:10px;
}
.back-button{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:rgb(152,251,152);
  border:none;
  display:block;
  margin:10px auto 80px;
  border-radius:10px;
  text-decoration:none;
  text-align:center;
}
</style>