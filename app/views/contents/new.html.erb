<%= render "/header" %>
<h2>マニュアル作成</h2>
<%= form_with model: @content, url: category_contents_path(params[:category_id]) do |f| %>
    <p class="label">マニュアル名</p>
    <%= f.text_field :name,class:"form" %>
    <p class="label">内容</p><p>※マークダウンに対応しています。mdの書き方については<a href="https://qiita.com/kamorits/items/6f342da395ad57468ae3" >こちら</a>を参考にしてください</p>
    <%= f.text_area :text,class:"form big" %>
    <p class="label">添付ファイル（PDF形式で保存してください）</p>
    <%= f.file_field :file,class:"file" %>
    <div class="actions">
        <%= f.submit "作成" %>
    </div>
    <%= link_to "戻る",category_contents_path(params[:category_id]),class:"back-button" %>
<% end %>

<style>
h2{
  text-align:center;
  margin-top:100px;
  margin-bottom:100px;
  font-size:40px;
}
.label{
  font-size:25px;
  text-align:center;
}
.form{
  display:block;
  margin:0 auto;
  text-align:center;
  width:500px;
  height:40px;
  font-size:25px;
}
.big{
    height:500px;
    width:800px;
}
.actions>input{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:skyblue;
  border:none;
  display:block;
  margin:100px auto 20px;
  border-radius:10px;
}
.back-button{
  width:150px;
  height:50px;
  font-size:30px;
  color:white;
  background:rgb(152,251,152);
  border:none;
  display:block;
  margin:10px auto 80px;
  border-radius:10px;
  text-decoration:none;
  text-align:center;
}
p{
    text-align:center;
}
.file{
  width:400px;
  display:block;
  font-size:20px;
  margin:0 auto 50px;
}
</style>